extends layout

block content
  .container.mt-5
    h2.text-center.mb-4 Login
    .row.justify-content-center
      .col-md-6
        form(action='/login' method='POST')
          .mb-3
            label.form-label(for='email') Email address
            input#email.form-control(type='email' name='email' placeholder='Enter email' required)
          .mb-3
            label.form-label(for='password') Password
            input#password.form-control(type='password' name='password' placeholder='Password' required)
          button.btn.btn-primary.w-100(type='submit') Login